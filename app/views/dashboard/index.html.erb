<h1 class="text-3xl font-bold mb-6">Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <div>
    <h2 class="text-2xl font-semibold mb-4">Your Boards</h2>
    <% if @boards.any? %>
      <ul class="space-y-2">
        <% @boards.each do |board| %>
          <li>
            <%= link_to board.name, board_path(board), class: "text-blue-600 hover:underline" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>You haven't created any boards yet.</p>
    <% end %>
    <%= link_to "Create a new board", new_board_path, class: "mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div>
    <h2 class="text-2xl font-semibold mb-4">Recent Feedback</h2>
    <% if @recent_feedbacks.any? %>
      <ul class="space-y-2">
        <% @recent_feedbacks.each do |feedback| %>
          <li>
            <%= link_to feedback.title, board_feedback_path(feedback.board, feedback), class: "text-blue-600 hover:underline" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No recent feedback.</p>
    <% end %>
  </div>
</div>